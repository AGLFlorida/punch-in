{
  "name": "punch-in",
  "version": "1.0.0",
  "description": "A tiny Electron app to punch in/out per project, with a Mac menu bar (tray) item showing the current project and elapsed time, plus a simple 2-screen UI (Timer & Reports).",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "npm run clean:dist && npm run build:ui && tsc && npm run copy:assets",
    "start": "npm run build && electron .",
    "dev:ui": "next dev src/renderer",
    "build:ui": "next build src/renderer",
    "export:ui": "next export src/renderer",
    "static:ui": "npm run build:ui && npm run export:ui",
    "dev": "ENV=development ELECTRON_ENABLE_LOGGING=1 npm start",
    "test": "jest --runInBand",
    "lint": "eslint .",
    "package": "npm run build && electron-packager . PunchIn --platform=darwin --arch=arm64 --out=out --overwrite",
    "copy:assets": "cp src/renderer/*.svg dist",
    "clean:dist": "rm -rf dist",
    "clean:next": "rm -rf src/renderer/.next",
    "clean:node": "rm -rf node_modules",
    "clean": "npm run clean:dist && npm run clean:next && npm run clean:node && npm i --silent",
    "rebuild:sqlite": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "npm run rebuild:sqlite",
    "prestart": "npm run rebuild:sqlite",
    "prepackage": "npm run rebuild:sqlite"
  },
  "author": "Brandon Shoop <brandon@aglflorida.com>",
  "license": "MIT",
  "dependencies": {
    "@electron/rebuild": "^4.0.1",
    "better-sqlite3": "^12.4.1",
    "electron": "^38.2.0",
    "electron-packager": "^17.1.2",
    "jest": "^30.2.0",
    "next": "^15.5.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@next/eslint-plugin-next": "^15.5.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.1",
    "@types/react": "^19.2.0",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.4",
    "globals": "^16.4.0",
    "jest-environment-jsdom": "^30.2.0",
    "jiti": "^2.6.1",
    "ts-jest": "^29.4.4",
    "typescript-eslint": "^8.45.0"
  }
}
